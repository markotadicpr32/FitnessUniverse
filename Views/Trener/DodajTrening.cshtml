@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <style>
        body {
            background: #b3fef9;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Dodavanje treninga</title>
</head>
<body>
    <div style="align-content:center;">


        <h2> Unesite podatke o treningu: </h2>

        <form action="UnosenjeTreninga" style="align-self:center;">

            <label>Naziv treninga :</label>
            <input type="text" name="naziv" /><br />
            <label>Tip treninga :</label>
            <input list="type" name="tip" /><br />

            <datalist id="type">
                <option value="Yoga"></option>
                <option value="Les Mills Tone"></option>
                <option value="Body Pump"></option>
            </datalist>
            <label>Trajanje treninga :</label>
            <input type="text" name="duration" size="3" /><br />
            <label>Pocetak treninga:</label>
            <input type="text" name="pdatey" value="YYYY" size="4" /><label><b>/</b></label>
            <input type="text" name="pdatemo" value="MM" size="2" /><label><b>/</b></label>
            <input type="text" name="pdated" value="DD" size="2" /><label><b>/</b></label>
            <input type="text" name="pdateh" value="HH" size="2" /><label><b>/</b></label>
            <input type="text" name="pdatemi" value="mm" size="2" /><label><b>/</b></label>
            <label>Maksimalan broj posetioca :</label>
            <input type="text" name="max" size="2" /><br />
            <input type="hidden" value="@ViewBag.naziv" name="nazivA" />

            <input type="submit" value="DODAJ TRENING" />



        </form>
        }


    </div>
</body>
</html>
